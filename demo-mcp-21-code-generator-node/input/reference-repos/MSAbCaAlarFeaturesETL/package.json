{
  "name": "MSAbCaAlarFeaturesETL",
  "version": "3.0.0",
  "description": "Microservicio encargado de actualizar las características de un producto para cargarlas y mostrarlas en el canal eCommerceV9.",
  "author": "Oscar Alvarez",
  "modified": "Christian Guantiva",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "sonar-scanner": "sonar-scanner -Dsonar.host.url=http://sonarqube-pruebad.apps.claro.co/",
    "prepare": "husky install"
  },
  "dependencies": {
    "@claro/general-utils-library": "1.0.30",
    "@claro/generic-models-library": "1.0.1",
    "@claro/logging-library": "^2.0.0",
    "@nestjs/cache-manager": "^2.2.1",
    "@nestjs/common": "^10.3.5",
    "@nestjs/core": "^10.3.5",
    "@nestjs/microservices": "^10.3.5",
    "@nestjs/mongoose": "^10.0.4",
    "@nestjs/platform-express": "^10.3.5",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/terminus": "^10.2.3",
    "@types/ssh2-sftp-client": "^9.0.3",
    "async-local-storage": "^2.3.1",
    "cache-manager": "^5.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cls-rtracer": "^2.6.3",
    "csv-parser": "^3.0.0",
    "csvtojson": "^2.0.10",
    "elastic-apm-node": "^4.5.0",
    "jest-junit": "^16.0.0",
    "kafkajs": "^2.2.4",
    "line-reader": "^0.4.0",
    "moment": "^2.30.1",
    "mongodb": "^6.5.0",
    "mongoose": "^8.2.3",
    "nats": "^2.19.0",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "sonar-scanner": "^3.1.0",
    "ssh2-sftp-client": "^10.0.3",
    "swagger-ui-express": "^5.0.0",
    "xml-to-json-stream": "^1.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.5",
    "@types/cache-manager": "^4.0.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3",
    "husky": "^8.0.1",
    "mock-fs": "^5.2.0"
  },
  "jest-junit": {
    "suiteName": "UnitTest",
    "outputDirectory": "./coverage",
    "outputName": "test-report.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " › ",
    "usePathForSuiteName": "true"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/test",
      "/coverage/",
      ".*\\.module\\.ts$",
      "/src/main.ts",
      "src/controller/dto/.*",
      "src/data-provider/model/.*",
      "./.eslintrc.js"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
