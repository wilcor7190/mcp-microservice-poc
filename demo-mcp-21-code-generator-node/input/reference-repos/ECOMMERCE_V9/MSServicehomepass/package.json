{
    "name": "MSServicehomepass",
    "version": "1.0.0",
    "description": "Un servicio para conocer la cobertura de red de la dirección de un cliente, estandarizar la dirección del cliente en la tienda virtual y gestionar los estados de las solicitudes Homepass con estado pendientes, en proceso y terminadas",
    "author": "Juan Sebastian Traslaviña & Juan David Marin",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "sonar-scanner": "sonar-scanner -Dsonar.host.url=http://sonarqube-pruebad.apps.claro.co/",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare": "husky install"
    },
    "dependencies": {
        "@claro/general-utils-library": "^1.0.31",
        "@claro/generic-models-library": "^1.0.6",
        "@claro/logging-library": "^2.0.0",
        "@nestjs/cache-manager": "2.2.2",
        "@nestjs/common": "10.3.7",
        "@nestjs/core": "10.3.7",
        "@nestjs/microservices": "10.3.7",
        "@nestjs/mongoose": "10.0.10",
        "@nestjs/platform-express": "10.3.7",
        "@nestjs/schedule": "4.0.1",
        "@nestjs/swagger": "7.3.1",
        "@nestjs/terminus": "10.2.3",
        "ajv": "^8.10.0",
        "cache-manager": "5.2.4",
        "class-transformer": "^0.5.1",
        "class-validator": "0.14.1",
        "cls-rtracer": "^2.6.0",
        "crypto-random-string": "^5.0.0",
        "jsonpath": "^1.1.1",
        "make-random": "^3.0.2",
        "moment": "^2.29.1",
        "mongoose": "^8.9.5",
        "MSServicehomepass": "file:",
        "oracledb": "^5.5.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "sonar-scanner": "^3.1.0",
        "split-string": "^6.1.0",
        "swagger-ui-express": "^5.0.0",
        "undici": "^6.20.0",
        "xml2js": "^0.6.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@nestjs/cli": "10.3.2",
        "@nestjs/schematics": "^10.1.1",
        "@nestjs/testing": "10.3.7",
        "@types/eslint": "8.4.3",
        "@types/express": "^4.17.13",
        "@types/jest": "^29.5.12",
        "@types/jsonpath": "^0.2.4",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^16.0.0",
        "@types/oracledb": "^6.0.3",
        "@types/supertest": "^2.0.11",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^8.0.1",
        "jest": "29.7.0",
        "jest-junit": "^15.0.0",
        "jest-sonar-reporter": "^2.0.0",
        "prettier": "^3.0.3",
        "supertest": "^6.1.3",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.7.2"
    },
    "jest-junit": {
        "suiteName": "UnitTest",
        "outputDirectory": "./coverage",
        "outputName": "test-report.xml",
        "uniqueOutputName": "false",
        "classNameTemplate": "{classname}-{title}",
        "titleTemplate": "{classname}-{title}",
        "ancestorSeparator": " › ",
        "usePathForSuiteName": "true"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "./",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/src/$1"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/dist/",
            "/test",
            "/coverage/",
            ".*\\.module\\.ts$",
            "/src/main.ts",
            "src/mock/.*",
            "src/controller/dto/.*",
            "src/data-provider/model/.*",
            "./.eslintrc.js"
        ],
        "testResultsProcessor": "jest-sonar-reporter"
    },
    "jestSonar": {
        "reportPath": "coverage",
        "reportFile": "test-reporter.xml",
        "indent": 4
    }
}
